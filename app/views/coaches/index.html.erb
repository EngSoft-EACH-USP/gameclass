<p id="notice"><%= notice %></p>

<h1>Coaches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Whatsapp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.description %></td>
        <td><%= user.whatsapp %></td>
        <td class='show'><%= link_to 'Show', coach_detail_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

